<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.fhooe.mc.android.itsme" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Itsme"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".tutorial.Tutorial"
            android:label="@string/title_activity_tutorial"
            android:parentActivityName=".SplashScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.fhooe.mc.android.itsme.SplashScreen" />
        </activity>
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FragmentSwipe"
            android:label="@string/title_activity_fragment_swipe" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.fhooe.mc.android.itsme.HomeScreenActivity" />
        </activity>
    </application>

</manifest>
